def mainDir="strategy-test"
def frontDir = "frontend"
def backDir = "backend"

pipeline {
    agent any
    tools {nodejs "nodejs"}

    stages {
        stage('Pull Codes from Github'){
            steps{
                checkout scm
            }
        }
        stage('update npm packages') {
            steps {
                sh """
                cd frontend
                npm install
                pm2 start "npm start"
                """
            }
        }
        stage('make python venv') {
            steps {
                sh """
                cd backend
                ./bin/pip3 install -r requirements.txt
                nohup ./bin/python3.9 ./src/main.py&
                """
            }
        }
    }
}
