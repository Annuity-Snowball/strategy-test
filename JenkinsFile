def mainDir="strategy-test"
def frontDir = "frontend"
def backDir = "backend"

pipeline {
    agent any
    tools {nodejs "nodejs"}

    stages {
        stage('Pull Codes from Github'){
            steps{
                checkout scm
            }
        }
        stage('update npm packages') {
            steps {
                sh """
                cd frontend
                npm install
                pm2 start "npm start"
                """
            }
        }
        stage('make python venv') {
            steps {
                sh """
                cd backend
                python3 -m venv ./
                """
            }
        }
        stage('run fast-api') {
            steps {
                withPythonEnv('./backend/bin/python3.9'){
                    sh """
                    pip install -r requirements
                    nohup python main.py&
                    """
                }
            }
        }
    }
}
