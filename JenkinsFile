def mainDir="strategy-test"
def frontDir = "frontend"
def backDir = "backend"

pipeline {
    agent any

    stages {
        stage('Pull Codes from Github'){
            steps{
                checkout scm
            }
        }
        stage('update npm packages') {
            steps {
                sh """
                cd ${frontDir}
                npm install
                """
            }
        }
        stage('update python packages') {
            steps {
                sh """
                cd ${backDir}
                source bin/activate
                pip install -r requirements
                """
            }
        }
        stage('run front, back') {
            steps {
                sh """
                cd ${backDir}
                source bin/activate
                python src/main.py
                cd ..
                cd ${frontDir}
                npm start
                """
            }
        }
    }
}
