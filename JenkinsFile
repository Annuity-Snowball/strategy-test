def mainDir="strategy-test"
def frontDir = "frontend"
def backDir = "backend"

pipeline {
    agent any
    tools {nodejs "nodejs"}

    stages {
        stage('Pull Codes from Github'){
            steps{
                checkout scm
            }
        }
        stage('update npm packages') {
            steps {
                sh """
                cd frontend
                npm install
                npm start
                """
            }
        }
        stage('update python packages') {
            steps {
                sh 'python3 -m venv ./backend'
                sh 'source backend/bin/activate'
                sh 'pip install -r requirements'
                sh 'python main.py'
            }
        }
    }
}
