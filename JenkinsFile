def mainDir="strategy-test"
def frontDir = "frontend"
def backDir = "backend"

pipeline {
    agent any

    stages {
        stage('Pull Codes from Github'){
            steps{
                checkout scm
            }
        }
        stage('Build frontend codes') {
            steps {
                sh """
                cd ${frontDir}
                npm install
                npm start
                """
            }
        }
        stage('Build backend codes') {
            steps {
                sh """
                cd ${backend}
                source bin/activate
                pip install -r requirements
                python src/main.py
                """
            }
        }
    }
}
